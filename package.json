{
  "name": "root",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start:frontend": "dotenv -- turbo run dev --scope='frontend'",
    "start:backend": "dotenv -- turbo run dev --scope='backend'",
    "start:prod": "NODE_ENV=atlas dotenv -- turbo run dev",
    "start:dev": "NODE_ENV=docker dotenv -- turbo run dev",
    "start:test": "cross-env NODE_ENV=test jest --testTimeout=10000 --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "dotenv-cli": "^7.0.0",
    "turbo": "^1.10.16",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.18",
    "@mui/x-date-pickers": "^6.18.2",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "gsap": "^3.12.4",
    "jquery": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-datepicker": "^4.24.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.21.1",
    "sweetalert2": "^11.10.1"
  }
}
